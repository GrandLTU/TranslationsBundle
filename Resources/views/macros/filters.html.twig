{% macro dropdown(filter) %}
    {% if filter|default(false) and filter.choices|length %}
        <ul class="nav navbar-nav">
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
                    <strong>{{ (filter.name)|capitalize }}</strong>:
                    {%- for choice in filter.choices -%}
                        {% if choice.active or ((not filter.state.active) and choice.default) %} {{ choice.label }}{% endif %}
                    {%- endfor -%}
                    <span class="caret"></span>
                </a>
                <ul class="dropdown-menu" role="menu">
                    {% for choice in filter.choices %}
                        {% if not (choice.active or (choice.default and not filter.state.active)) %}
                            <li><a href="{{ path('ongr_translations_list_page', choice.getUrlParameters()) }}">{{ choice.label }}</a></li>
                        {% endif %}
                    {% endfor %}
                </ul>
            </li>
        </ul>
    {% endif %}
{% endmacro %}
